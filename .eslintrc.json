{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "global-require": "off",
        "no-console": "off",
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    }
}